---
import Layout from '../layouts/Layout.astro'
import Experience from '../components/Experience.astro'
import Projects from '../components/Projects.astro'
import Badge from "../components/Badge.astro"
import AboutMe from '../components/AboutMe.astro'
import LinkButton from "../components/LinkButton.astro"

import LinkedInIcon from "../icons/Linkedin.astro"
import GithubIcon from "../icons/Github.astro"
import MailIcon from "../icons/Mail.astro"
import BriefcaseIcon from "../icons/Briefcase.astro"
import CodeIcon from "../icons/Code.astro"
import ProfileIcon from "../icons/Profile.astro"

---

<Layout 
	title="Mateo's Porfolio - Web developer - Desktop apps programmer - 3 years of experience Fullstack developer"
	description="Partner with Mateo to bring your web or mobile application to life. As a seasoned full-stack web developer, Mateo excels at crafting high-performance applications that meet the highest standards of quality and user experience."
>

	<main>
		<section class="met">
			<h1>Hello, it's Mateo <Badge href="https://www.linkedin.com/in/mateo-l%C3%B3pez-mu%C3%B1oz-45aa9125a/">Available for hire</Badge></h1>
			<h2>Three years of professional experience in software development. Skilled full-stack developer with a focus on delivering high-caliber applications. Based in Medell√≠n, Colombia, with a specialization in delivering exceptional quality solutions.</h2>
			
			<nav>
				<LinkButton href="https://www.linkedin.com/in/mateo-l%C3%B3pez-mu%C3%B1oz-45aa9125a/">
					<LinkedInIcon class="icon"/>
					LinkedIn
				</LinkButton>
				<LinkButton href="https://github.com/Mat0wa3">
					<GithubIcon class="icon"/>
					Github
				</LinkButton>
				<LinkButton href="mailto:mmateo1804@gmail.com">
					<MailIcon class="icon"/>
					mmateo1804@gmail.com
				</LinkButton>
			</nav>
		</section>

		<section id="experience">
			<h2 class="title"><BriefcaseIcon/>Professional experience</h2>
			<Experience />
		</section>

		<section id="projects">
			<h2 class="title"><CodeIcon/>Projects</h2>
			<Projects />
		</section>

		<section id="about">
			<h2 class="title"><ProfileIcon/>About me</h2>
			<AboutMe />
		</section>
	</main>
</Layout>

<style>
	main {
		padding-inline: 1rem;
	}

	section {
		width: 100%;
		margin-inline: auto;
		padding-top: 3rem;
		margin-bottom: 4rem;
	}

	h1 {
		color: white;
		font-size: 1.875rem;
		line-height: 2.25rem;
		font-weight: bold;
		padding-bottom: 1.2rem;

		display: flex;
		flex-direction: row;
		align-items: center;

		a {
			display: flex;
			justify-content: center;
			align-items: center;
			margin-top: 7px;
			margin-inline: .5rem;
		}
	}

	h2 {
		font-size: 1.25rem;
		line-height: 1.75rem;
		color: rgb(148 163 184);
		font-weight: normal;
		padding-bottom: 1.2rem;
		max-width: 700px;
	}

	.title {
		font-size: 1.5rem;
		line-height: 2rem;
		font-weight: 600;
		margin-bottom: 1.5rem;
		color: white	;

		display: flex;
		align-items: center;
		column-gap: 0.5rem;
	}

	.icon {
		width: 1.5rem;
		height: 1.5rem;
	}

	nav {
		display: flex;
		gap: 1rem;
		margin-top: 2rem;
		flex-wrap: wrap;
	}

	@media (min-width: 1024px) { 
		section {
			width: 960px;
			padding-inline: 1.5rem;
		}

		h1 {
			font-size: 3rem;
			line-height: 1;
			padding-bottom: 0.5rem;
		}

		h2 {
			font-size: 1.5rem;
			line-height: 2rem;
		}
	}

	@media (min-width: 768px) {
		h1 {
			font-size: 2.25rem;
			line-height: 2.5rem;
		}
	}
</style>
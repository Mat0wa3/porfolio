---
import Layout from '@/layouts/Layout.astro'
import Experience from '@/components/Experience.astro'
import Projects from '@/components/Projects.astro'
import Badge from "@/components/Badge.astro"
import AboutMe from '@/components/AboutMe.astro'
import LinkButton from "@/components/LinkButton.astro"

import LinkedInIcon from "@/icons/Linkedin.astro"
import GithubIcon from "@/icons/Github.astro"
import MailIcon from "@/icons/Mail.astro"
import BriefcaseIcon from "@/icons/Briefcase.astro"
import CodeIcon from "@/icons/Code.astro"
import ProfileIcon from "@/icons/Profile.astro"

---

<Layout 
	title="Porfolio de Mateo - Desarrollador web - programador de aplicaciones de escritorio - fullstack con 3 años de esperiencia"
	description="Contrata a Mateo para crear tu aplicación web o móvil. Desarrollador web fullstack. Especializado en crear aplicaciones de alta calidad."
>

	<main>
		<section class="met">
			<h1>Hola, soy Mateo <Badge href="https://www.linkedin.com/in/mateo-l%C3%B3pez-mu%C3%B1oz-45aa9125a/">Disponible para trabajar.</Badge></h1>
			<h2>+3 años de experiencia. Desarrollador fullstack. De Medellín, Colombia. Especializado en crear aplicaciones de alta calidad.</h2>
			
			<nav>
				<LinkButton href="https://www.linkedin.com/in/mateo-l%C3%B3pez-mu%C3%B1oz-45aa9125a/">
					<LinkedInIcon class="icon"/>
					LinkedIn
				</LinkButton>
				<LinkButton href="https://github.com/Mat0wa3">
					<GithubIcon class="icon"/>
					Github
				</LinkButton>
				<LinkButton href="mailto:mmateo1804@gmail.com">
					<MailIcon class="icon"/>
					mmateo1804@gmail.com
				</LinkButton>
			</nav>
		</section>

		<section id="experience">
			<h2 class="title"><BriefcaseIcon/>Experiencia laboral</h2>
			<Experience />
		</section>

		<section id="projects">
			<h2 class="title"><CodeIcon/>Proyectos</h2>
			<Projects />
		</section>

		<section id="about">
			<h2 class="title"><ProfileIcon/>Sobre mí</h2>
			<AboutMe />
		</section>
	</main>
</Layout>

<style>
	main {
		padding-inline: 1rem;
	}

	section {
		width: 100%;
		margin-inline: auto;
		padding-top: 3rem;
		margin-bottom: 4rem;
	}

	h1 {
		color: white;
		font-size: 1.875rem;
		line-height: 2.25rem;
		font-weight: bold;
		padding-bottom: 1.5rem;

		display: flex;
		flex-direction: row;
		align-items: center;

		a {
			display: flex;
			justify-content: center;
			align-items: center;
			margin-top: 7px;
			margin-inline: .5rem;
		}
	}

	h2 {
		font-size: 1.25rem;
		line-height: 1.75rem;
		color: rgb(148 163 184);
		font-weight: normal;
		max-width: 700px;
	}

	.title {
		font-size: 1.5rem;
		line-height: 2rem;
		font-weight: 600;
		margin-bottom: 1.5rem;
		color: white	;

		display: flex;
		align-items: center;
		column-gap: 0.5rem;
	}

	.icon {
		width: 1.5rem;
		height: 1.5rem;
	}

	nav {
		display: flex;
		gap: 1rem;
		margin-top: 2rem;
		flex-wrap: wrap;
	}

	@media (min-width: 1024px) { 
		section {
			width: 960px;
			padding-inline: 1.5rem;
		}

		h1 {
			font-size: 3rem;
			line-height: 1;
			padding-bottom: 0.5rem;
		}

		h2 {
			font-size: 1.5rem;
			line-height: 2rem;
		}
	}

	@media (min-width: 768px) {
		h1 {
			font-size: 2.25rem;
			line-height: 2.5rem;
		}
	}
</style>
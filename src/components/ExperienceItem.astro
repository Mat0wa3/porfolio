---
interface Props {
    title: string,
    description: string,
    date: string,
    link?: string
}

const { title, description, date, link } = Astro.props
---
<div class="flex items-center">
    <div class="icon">
        <svg class="size" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
            <path d="M20 4a2 2 0 0 0-2-2h-2V1a1 1 0 0 0-2 0v1h-3V1a1 1 0 0 0-2 0v1H6V1a1 1 0 0 0-2 0v1H2a2 2 0 0 0-2 2v2h20V4ZM0 18a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2V8H0v10Zm5-8h10a1 1 0 0 1 0 2H5a1 1 0 0 1 0-2Z"/>
        </svg>
    </div>
    <div class="bar"></div>
</div>
<div class="content">
    <h3>{title}</h3>
    <time>{date}</time>
    <p>{description}</p>
    {
        link && (
        <a href={link}>Saber m√°s</a>
    )}
</div>

<style>
    p {
        font-size: 1rem;
        line-height: 1.5rem;
        font-weight: 400;
        color: rgb(148 163 184);
    }

    h3 {
        font-size: 1.125rem;
        line-height: 1.75rem;
        font-weight: 600;
        color: white;
    }
    
    time {
        display: block;
        margin-bottom: 0.5rem;
        font-size: 0.875rem;
        line-height: 1.25rem;
        font-weight: 400;
        line-height: 1;
        color: rgb(107 114 128);
    }

    .flex {
        display: flex;
    }

    .items-center {
        align-items: center;
    }

    .size {
        width: 0.625rem;
        height: 0.625rem;
        color: rgb(147 197 253);
    }

    .icon {
        z-index: 10;
        width: 1.5rem;
        height: 1.5rem;
        background-color: rgb(30 58 138);
        border-radius: 9999px;
        box-shadow: 0 0 0 3px rgb(17 24 39);

        display: flex;
        justify-content: center;
        align-items: center;
        flex-shrink: 0;
    }

    .bar {
        display: none;
        width: 100%;
        background-color: rgb(55 65 81);
        height: 0.125rem;
    }

    .content {
        margin-top: 0.75rem;
    }

    @media (min-width: 640px) { 
        .icon {
            box-shadow: 0 0 0 8px rgb(17 24 39);
        }

        .bar {
            display: flex;
        }

        .content {
            padding-inline-end: 2rem;
        }
     }
</style>
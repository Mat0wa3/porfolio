---
    import Tags from "./Tags.astro"
    import LinkButton from "./LinkButton.astro"
    import HtmlIcon from "../icons/Html.astro"
    import CssIcon from "../icons/Css.astro"
    import GithubIcon from "../icons/Github.astro"
    import WebIcon from "../icons/Web.astro"
    import PhpIcon from "../icons/Php.astro"
    import AstroIcon from "../icons/Astro.astro"
    import JavaScriptIcon from "../icons/JavaScript.astro"

    const TAGS = {
        HTML: {
            name: "HTML",
            color: "#ce4822",
            icon: HtmlIcon
        },

        CSS: {
            name: "CSS",
            color: "#0b68a7",
            icon: CssIcon
        },

        JS: {
            name: "JavaScript",
            color: "#cbba43",
            icon: JavaScriptIcon
        },

        Php: {
            name: "PHP",
            color: '#777bb3',
            icon: PhpIcon
        },

        Astro: {
            name: "ASTRO",
            color: "#de5101",
            icon: AstroIcon
        }
    }

    const PROJECTS = [
        {
            title: 'RPG-Construlivianas',
            image: '/construlivianas.webp',
            github: 'https://github.com/Mat0wa3/Construlivianas',
            tags: [TAGS.HTML, TAGS.CSS, TAGS.JS]
        },
        {
            title: 'Encriptador',
            github: 'https://github.com/Mat0wa3/Sprint01-encriptador',
            image: '/Encriptador.webp',
            tags: [TAGS.HTML, TAGS.CSS, TAGS.JS]
        },
        {
            title: 'Prime-Saber',
            github: 'https://github.com/Mat0wa3/Prime-Saber',
            image: '/Prime-Saber.webp',
            tags: [TAGS.HTML, TAGS.CSS, TAGS.Php]
        },
        {
            title: 'Discord-bot',
            image: '/Discord-bot.webp',
            tags: [TAGS.JS]
        }
    ]
---

<section>
{
    PROJECTS.map(({ title, tags, image, github }) => (
        <article id={title}>
            <h3>{title}</h3>
            <ul>
                {
                    tags.map(tag => (
                        <li>
                            <Tags>
                                <tag.icon/>
                            </Tags>
                        </li>
                    ))
                }
            </ul> 
            <img loading="lazy" src={image} alt={`captura de pantalla del proyecto ${title}`}>
            <footer>
                {
                    github && (
                        <a href={github} target="_blank" rel="noopener noreferer">
                            <GithubIcon />
                        </a>
                    )
                }
                
            </footer>
        </article>
        ))
    }
</section>

<style>
    section {
        margin-inline: auto;
        max-width: 960px;

        grid-template-columns: repeat(5, 1fr);

        display: flex;
        flex-direction: column;
        gap: 10px;
    }
    
    article {
        background-color: hsla(0, 0%, 100%, 0.04);
        overflow: hidden;
        border-radius: 2rem;
        padding: 0 1rem;

    }

    #RPG-Construlivianas {
        grid-column: 1/4;
    }

    #Encriptador {
        grid-column: 4/6;
    }

    #Discord-bot {
        grid-column: 1/3;
        grid-row: 2;
    }

    #Prime-Saber {
        grid-column: 3/6;
    }

    h3 {
        color: #01e8d0;
    }    

    p {
        color: rgb(148 163 184);
    }

    ul {
        display: flex;
        flex-wrap: wrap;
        gap: 1rem;
        margin-bottom: 1.25rem;
    }

    footer {
        display: flex;
        justify-content: end;
        transform: translate(-1%, -110%);
        margin: 0;
        padding: 0;
    }

    a {
        padding: .25rem;
        background: rgba(40, 40, 40, .9);
        border-radius: 9999px;

        display: flex;
    }

    @media (min-width: 1024px) {
        section {
            display: grid;
        }
    }
</style>
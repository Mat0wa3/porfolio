---
    import Tags from "./Tags.astro"
    import LinkButton from "./LinkButton.astro"

    import HtmlIcon from "@/icons/Html.astro"
    import CssIcon from "@/icons/Css.astro"
    import GithubIcon from "@/icons/Github.astro"
    import WebIcon from "@/icons/Web.astro"
    import PhpIcon from "@/icons/Php.astro"
    import AstroIcon from "@/icons/Astro.astro"
    import JavaScriptIcon from "@/icons/JavaScript.astro"

    const TAGS = {
        HTML: {
            name: "HTML",
            color: "#ce4822",
            icon: HtmlIcon
        },

        CSS: {
            name: "CSS",
            color: "#0b68a7",
            icon: CssIcon
        },

        JS: {
            name: "JavaScript",
            color: "#cbba43",
            icon: JavaScriptIcon
        },

        Php: {
            name: "PHP",
            color: '#777bb3',
            icon: PhpIcon
        },

        Astro: {
            name: "ASTRO",
            color: "#de5101",
            icon: AstroIcon
        }
    }

    const PROJECTS = [
        {
            title: 'RPG-Construlivianas',
            image: '/construlivianas.webp',
            description: 'Official online presence for RPG Construlivianas S.A.S., a leading Colombian construction company, showcasing their services, projects, and expertise.',
            github: 'https://github.com/Mat0wa3/Construlivianas',
            tags: [TAGS.HTML, TAGS.CSS, TAGS.JS]
        },
        {
            title: 'Encryption-app',
            github: 'https://github.com/Mat0wa3/Sprint01-encriptador',
            description: 'A custom-built encryption and decryption application created in response to the Alura Latam coding challenge, demonstrating proficiency in cryptography and problem-solving skills.',
            image: '/Encriptador.webp',
            tags: [TAGS.HTML, TAGS.CSS, TAGS.JS]
        },
        {
            title: 'Prime-Saber',
            github: 'https://github.com/Mat0wa3/Prime-Saber',
            description: 'A web-based application specifically designed for educational institutions, enabling them to conduct simulated state exams, providing a realistic and effective assessment tool for students and educators alike.',
            image: '/Prime-Saber.webp',
            tags: [TAGS.HTML, TAGS.CSS, TAGS.Php]
        },
        {
            title: 'Discord-bot',
            image: '/Discord-bot.webp',
            description: 'LockSley represents the latest iteration of CAOS, a comprehensive toolset designed to streamline and simplify various tasks, including Discord configuration, image creation, community moderation, and entertainment, all created by me to alleviate the workload of these tasks.',
            tags: [TAGS.JS]
        }
    ]
---

<section>
{
    PROJECTS.map(({ title, description, tags, image, github }) => (
        <article id={title}>
            <div class="description">
                <p>{description}</p>
            </div>
            <h3>{title}</h3>
            <ul>
                {
                    tags.map(tag => (
                        <li>
                            <Tags>
                                <tag.icon/>
                            </Tags>
                        </li>
                    ))
                }
            </ul> 
            <img loading="lazy" src={image} alt={`captura de pantalla del proyecto ${title}`}>
            <footer>
                {
                    github && (
                        <a href={github} target="_blank" rel="noopener noreferer">
                            <GithubIcon />
                        </a>
                    )
                }
                
            </footer>
        </article>
        ))
    }
</section>

<style>
    .description {
        position: absolute;
        background-color: rgba(0, 0, 0, .6);
        height: 100%;
        width: 100%;
        left: -100%;
        padding-inline: 15px;
        font-size: 1.5rem;
        line-height: 2rem;
        backdrop-filter: blur(5px);
        transition: all .5s ease;

        display: flex;
        justify-content: center;
        align-items: center;
    }

    section {
        margin-inline: auto;
        max-width: 960px;

        grid-template-columns: repeat(5, 1fr);

        display: flex;
        flex-direction: column;
        gap: 10px;
    }
    
    article {
        background-color: hsla(0, 0%, 100%, 0.04);
        overflow: hidden;
        border-radius: 2rem;
        padding-inline: 1rem;
        position: relative;

        img {
            border-radius: 1rem;
            margin-bottom: 1rem;
        }
    }

    article:hover .description {
        left: 0;
        right: 0;
    }

    #RPG-Construlivianas {
        grid-column: 1/4;
    }

    #Encryption-app {
        grid-column: 4/6;

        img {
            height: 287px;
        }
    }

    #Discord-bot {
        grid-column: 1/3;
        grid-row: 2;

        img {
            height: 287px;
        }
    }

    #Prime-Saber {
        grid-column: 3/6;
    }

    h3 {
        color: #01e8d0;
    }    

    p {
        color: rgb(148 163 184);
    }

    ul {
        display: flex;
        flex-wrap: wrap;
        gap: 1rem;
        margin-bottom: 1.25rem;
    }

    footer {
        display: flex;
        justify-content: end;
    }

    a {
        padding: .25rem;
        background: rgba(40, 40, 40, .9);
        border-radius: 9999px;
        position: absolute;
        bottom: 0;
        transform: translate(-1px, -50%);

        display: flex;
    }

    @media (min-width: 1024px) {
        section {
            display: grid;
        }
    }
</style>
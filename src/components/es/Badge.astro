---
    const { href } = Astro.props
---

<a href={href} target="_blank" rel="noopener noreferer">
    <slot />
</a>

<style>
    a {
        margin-inline-end: 0.5rem;
        padding: .125rem .625rem;
        cursor: pointer;
        background: linear-gradient(rgb(0, 255, 203) 0%, rgb(0, 182, 168) 100%);
        box-shadow: inset 0 2px 0 0 hsla(0, 0%, 100%, .2), inset 0 -1px 0 1px rgba(0, 0, 0, .25), 0 2px 6px 0 rgba(0, 0, 0, .1);
        color: rgb(0, 58, 57);
        font-size: 0.6rem;
        line-height: .85rem;
        border-radius: 5px;
    }

    @media (min-width: 768px) {
        a {
            font-size: 0.75rem;
            line-height: 1rem;
        }
    }
</style>